{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "dom"],
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true
  },
  "typeRoots": ["types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
