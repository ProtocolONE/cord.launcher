// app global css
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700')

::-webkit-scrollbar
  width: .45em

::-webkit-scrollbar-track
  -webkit-box-shadow: inset 0 0 6px rgba($black, .6s)

::-webkit-scrollbar-thumb
  background-color: rgba($grey, .8)
  outline: 1px solid $grey

body
  overflow: hidden

.q-link
  color: rgba($white, .7)

.lato
  font-family: Lato

.roboto
  font-family: Roboto

.list
  margin: 0
  padding: 0
  list-style-type: none
